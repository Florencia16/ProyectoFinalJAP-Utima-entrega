<Page x:Class="TerceraEntrega.Personaje.ListaPersonaje"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TerceraEntrega.Personaje"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ListaPersonaje">

	<Grid>
		<ListView  Name ="ListaPersonajes" HorizontalAlignment="Left" Height="255" VerticalAlignment="Top" Width="300">
			<ListView.ItemTemplate>
				<DataTemplate>
					<Grid>
						<Border Margin="5" BorderBrush="Black" BorderThickness="1">
							<Image Source="{Binding Imagen}" Stretch="Fill" Width="50" Height="50" />
						</Border>
						<TextBlock Text="{Binding Nombre }"></TextBlock>
					</Grid>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

	</Grid>
</Page>
