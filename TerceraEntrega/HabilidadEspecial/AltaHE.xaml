<Page x:Class="TerceraEntrega.AltaHE"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TerceraEntrega"
      mc:Ignorable="d" 
      d:DesignHeight="300"
      Title="AltaHE" Width="454.506">

    <Grid Margin="0,-13,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="254*"/>
        </Grid.RowDefinitions>
        <Label Content="Alta Habilidad Especial" HorizontalAlignment="Left" Height="38" Margin="10,21,0,0" VerticalAlignment="Top" Width="225" FontSize="16" FontWeight="Bold"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Height="32" Margin="22,44,0,0" Grid.Row="1" VerticalAlignment="Top" Width="62"/>
        <Label Content="Descripción" HorizontalAlignment="Left" Height="26" Margin="10,99,0,0" Grid.Row="1" VerticalAlignment="Top" Width="74"/>
        <TextBox HorizontalAlignment="Left" Height="32" Margin="89,48,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Ingrese nombre" VerticalAlignment="Top" Name ="Nombretxt" Width="169"/>
        <TextBox HorizontalAlignment="Left" Height="49" Margin="89,103,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Ingrese descripción de esta HE" Name ="Descripciontxt" VerticalAlignment="Top" Width="205"/>
        <Button Content="Cargar" HorizontalAlignment="Left" Height="32" Margin="341,192,0,0" Grid.Row="1" VerticalAlignment="Top" Width="104" Click="Button_Click"/>
        <Button Content="Volver" HorizontalAlignment="Left" Height="32" Margin="196,192,0,0" Grid.Row="1" VerticalAlignment="Top" Width="113"/>
        <TextBlock HorizontalAlignment="Left" Height="32" Margin="22,192,0,0" Grid.Row="1" TextWrapping="Wrap" Name="Message" VerticalAlignment="Top" Width="169"/>
    </Grid>
</Page>
